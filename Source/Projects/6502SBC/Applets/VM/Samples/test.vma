; LED On test - turn LED on pin 0 on and exit
.CONST
    GPIO.PinMode    0x26
    GPIO.PinWrite   0x28
    
.DATA
    ; No data needed

.MAIN
    ; Configure pin 0 as output
    PUSHB 0              ; Pin 0
    POPA                 ; A = pin number
    PUSHB 1              ; OUTPUT mode (1)
    POPY                 ; Y = mode
    
    DUMP
    
    SYSCALL GPIO.PinMode
    
    ; Turn LED ON
    PUSHB 0              ; Pin 0
    POPA                 ; A = pin number
    PUSHB 1              ; HIGH (1)
    POPY                 ; Y = value
    
    DUMP
    
    SYSCALL GPIO.PinWrite
    
    ; Exit
    HALT